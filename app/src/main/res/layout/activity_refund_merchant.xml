                            android:textColor="#50FFFFFF"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/refundTypeThree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="退款成功"
