<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mealServeImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/searchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="青苔"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/searchAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/woman_shape"
            android:drawableLeft="@mipmap/content_icon_lady"
            android:drawablePadding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="21"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/searchJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/join_shape"
            android:drawablePadding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="律师"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/mealServeCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:button="@null"
        android:drawableRight="@drawable/meal_serve" />
</RelativeLayout>