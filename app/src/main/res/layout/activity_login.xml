<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="开启一场约玩"
        android:textColor="#ff2e2e33"
        android:textSize="32dp"
        android:textStyle="bold" />

    <RelativeLayout
        style="@style/reginster_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColorHint="#999999"
            app:hintTextAppearance="@style/TextInputAppTheme">

            <EditText
                android:id="@+id/loginPhone"
                android:theme="@style/inputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入您的手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#000000"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+86"
            android:textColor="#333333"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/reginster_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColorHint="#30272121"
            app:hintTextAppearance="@style/TextInputAppTheme">

            <EditText
                android:id="@+id/registerVerification"
                android:theme="@style/inputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入验证码"
                android:inputType="number"
                android:textColor="#272121"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/registerGetVerification"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#333333"
            android:textSize="15dp" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/reginster_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:textColorHint="#30272121"
        android:visibility="gone"
        app:hintTextAppearance="@style/TextInputAppTheme"
        app:passwordToggleDrawable="@drawable/rigister_eye_selector"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/registerPassword"
            style="@style/inputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#272121"
            android:textSize="16dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/registerNext"
        style="@style/splash_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:enabled="false"
        android:background="@drawable/login_btn_bg"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/passwordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="24dp"
        android:text="密码登录"
        android:textColor="#333333"
        android:textSize="14dp" />

</LinearLayout>