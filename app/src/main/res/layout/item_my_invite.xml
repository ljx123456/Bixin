<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/inviteImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="6dp"
        android:scaleType="centerCrop"
        android:src="#E1E1E1"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/inviteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inviteImage"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/inviteImage"
        android:text="青苔"
        android:textColor="#333333"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inviteImage"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/inviteImage"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inviteAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/woman_shape"
            android:drawableLeft="@mipmap/content_icon_lady"
            android:drawablePadding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="21"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/inviteJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/join_shape"
            android:drawablePadding="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="律师"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/inviteImageOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/invalid" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inviteMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥880.00"
                android:textColor="#ffff6464"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/inviteType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/inviteImage"
                    android:text="约玩邀请中"
                    android:textColor="#999999"
                    android:textSize="13dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inviteTime"
                    android:textColor="#84CEFE"
                    android:textSize="13dp"
                    android:text="（）"/>
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/inviteOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:visibility="gone"
            android:src="@mipmap/icon_close" />
    </LinearLayout>
</RelativeLayout>