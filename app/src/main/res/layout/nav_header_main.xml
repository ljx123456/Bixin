<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="#cccccc"
            app:riv_oval="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/layout_name">

                <TextView
                    android:id="@+id/mainUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/mainUserSet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/homepage_data_icon_modify" />
            </LinearLayout>

            <TextView
                android:id="@+id/mainElseData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="#666666"
                android:textSize="14dp"
                android:layout_below="@+id/layout_name" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="24dp">

                    <TextView
                        android:id="@+id/mainSao"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_qrcode"
                        android:gravity="center_vertical"
                        android:text="扫一扫" />

                    <TextView
                        android:id="@+id/mianOrder"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_order"
                        android:gravity="center_vertical"
                        android:text="订单" />

                    <TextView
                        android:id="@+id/mainJiu"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_wine"
                        android:gravity="center_vertical"
                        android:text="存酒" />

                    <TextView
                        android:id="@+id/mainAttention"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_follow"
                        android:gravity="center_vertical"
                        android:text="我的关注" />

                    <TextView
                        android:id="@+id/mainDiscount"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_coupon"
                        android:gravity="center_vertical"
                        android:text="优惠券" />

                    <TextView
                        android:id="@+id/mainFriend"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_invitation"
                        android:gravity="center_vertical"
                        android:text="邀请好友"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/mainRefund"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_refund"
                        android:gravity="center_vertical"
                        android:text="退款" />

                    <TextView
                        android:id="@+id/mainBroker"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_agent"
                        android:gravity="center_vertical"
                        android:text="经纪人"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/mainJinji"
                        style="@style/main_mune"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_urgent"
                        android:gravity="center_vertical"
                        android:text="紧急处理"
                        android:visibility="gone" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="24dp">
                    <TextView
                        android:id="@+id/mainSet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:drawablePadding="24dp"
                        android:drawableLeft="@mipmap/homepage_data_icon_setting"
                        android:gravity="center_vertical"
                        android:textColor="#ff666666"
                        android:textSize="14dp"
                        android:text="设置" />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>
