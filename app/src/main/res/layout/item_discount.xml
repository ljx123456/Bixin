<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@mipmap/ic_coupons"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#ffff6464"
            android:textSize="12dp"
            android:text="¥"
            android:id="@+id/couponTips"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/couponTips"
            android:layout_marginTop="12dp"
            android:textColor="#ffff6464"
            android:textSize="24dp"
            android:id="@+id/couponMoney"
            android:text="0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="达人抵扣金"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:id="@+id/couponTitle"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:textColor="#a6000000"
            android:text="有效期：2019/06/01 - 2019/07/01"
            android:textSize="12dp"
            android:id="@+id/couponTime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/couponTitle"
            android:layout_above="@+id/couponTime"
            android:layout_marginTop="2dp"
            android:text="大于300元可用"
            android:textColor="#a6000000"
            android:textSize="12dp"
            android:id="@+id/couponCondition"/>

    </RelativeLayout>

</LinearLayout>