<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/item_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请选择投诉原因"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（必填）"
                            android:textColor="#73000000"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recy_complaint"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/item_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细内容"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（必填）"
                            android:textColor="#73000000"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="244dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/complaint_shape"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/complaint_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|top"
                        android:hint="请填写详细内容…"
                        android:maxLength="300"
                        android:textColor="#333333"
                        android:textColorHint="#73000000"
                        android:textCursorDrawable="@null"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/complaint_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="0/300"
                        android:textColor="#ffcccccc"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:background="@drawable/item_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传照片"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（最多可上传3张照片；非必填）"
                            android:textColor="#73000000"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/complaint_layout1"
                        android:visibility="gone">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            app:riv_corner_radius="6dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:id="@+id/complaint_img1"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/button_checkout_pink_cancel"
                            android:scaleType="fitCenter"
                            android:id="@+id/complaint_cancel1"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/complaint_layout2"
                        android:visibility="gone">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            app:riv_corner_radius="6dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:id="@+id/complaint_img2"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/button_checkout_pink_cancel"
                            android:scaleType="fitCenter"
                            android:id="@+id/complaint_cancel2"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/complaint_layout3"
                        android:visibility="gone">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            app:riv_corner_radius="6dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:id="@+id/complaint_img3"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/button_checkout_pink_cancel"
                            android:scaleType="fitCenter"
                            android:id="@+id/complaint_cancel3"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@mipmap/add_pic"
                        android:scaleType="fitCenter"
                        android:id="@+id/add_pic_complaint"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="16dp"
            android:background="@drawable/btn_bg"
            android:id="@+id/btn_complaint"/>
    </RelativeLayout>
</LinearLayout>