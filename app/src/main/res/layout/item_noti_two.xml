<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/item_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notiTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款成功"
                android:textColor="#ffff6464"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notiTitleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff6464"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notiMoneyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notiMoneyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额："
                android:textColor="#ff999999"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/notiRefundPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="￥880.00"
                android:textColor="#ff333333"
                android:textSize="32dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/notiLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notiContextTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您有服务已完成，请及时评价"
                android:textColor="#ff333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/notiContextTwoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（包房已满）"
                android:textColor="#ff999999"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notiImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/notiImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:src="#504c4c4c"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/notiContextThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您有服务已完成，请及时评价"
                android:textColor="#ff333333"
                android:textSize="14dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/notiItemID"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:text="订单号：483749834973204"
            android:textColor="#ff999999"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#F5F5F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8-30 18:24"
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/button_more_gray"
                android:drawablePadding="5dp"
                android:text="查看详情"
                android:textColor="#666666"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/red_dot_bg"
        android:id="@+id/messageView"
        android:visibility="gone"/>


</RelativeLayout>