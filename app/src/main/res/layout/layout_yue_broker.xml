<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jinjiren"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/yue_btn_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="约玩经纪人"
            android:textColor="#333333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!--<TextView-->
            <!--android:id="@+id/brokerGenghuan"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:padding="5dp"-->
            <!--android:text="更改"-->
            <!--android:textColor="#999999"-->
            <!--android:textSize="13dp" />-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/brokerImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            android:src="#cccccc"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/brokerImage"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brokerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="青苔"
                android:textColor="#333333"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/brokerAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/woman_shape"
                    android:drawableLeft="@mipmap/content_icon_lady"
                    android:drawablePadding="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="21"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/brokerJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_shape"
                    android:drawablePadding="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="律师"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/brokerOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@mipmap/shoppingcart_button_close" />
    </LinearLayout>
</LinearLayout>