<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/item_bg"
    android:orientation="vertical"
    android:paddingLeft="12dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/serveImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="#cccccc"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/searchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/serveImage"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/serveImage"
        android:text="青苔"
        android:textColor="#333333"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/searchAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serveImage"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/serveImage"
        android:background="@drawable/woman_shape"
        android:drawableLeft="@mipmap/content_icon_lady"
        android:drawablePadding="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="21"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/searchJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchAge"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/searchAge"
        android:background="@drawable/join_shape"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="律师"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/searchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchJoin"
        android:layout_toRightOf="@+id/searchJoin"
        android:background="@drawable/gray_shape"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />


</RelativeLayout>