<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutYueWine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/yue_btn_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="酒水其他"
            android:textColor="#333333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（总计："
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/wineMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥12928.00"
                android:textColor="#FF6464"
                android:textSize="13dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="）"
                android:textColor="#666666"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/wineMiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:text="折叠"
            android:textColor="#ff999999"
            android:textSize="14dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />

    <com.example.shadow.heartrecreation.view.NestedExpandaleListView
        android:id="@+id/yueDrinkss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/wineDel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="清空"
            android:textColor="#ff999999"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="#D8D8D8" />

        <TextView
            android:id="@+id/addDrinkss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+ 添加酒水"
            android:textColor="#ffff911e"
            android:textSize="13dp" />
    </LinearLayout>

    <!-- <android.support.v7.widget.RecyclerView
         android:id="@+id/yueDrinkss"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />-->
</LinearLayout>