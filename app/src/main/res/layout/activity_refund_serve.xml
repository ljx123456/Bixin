<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/content"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFC88F" />

            <ImageView
                android:id="@+id/orderTypeImage"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:src="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderTypeImage"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/refundTypeOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下单成功"
                    android:textColor="#50FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/refundTypeTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="#50FFFFFF"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/refundTypeThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="退款成功"
                    android:textColor="#50FFFFFF"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/yue_btn_bg"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="订单号："
                        android:textColor="#999999"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/refundNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#ff333333"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/refundTypeContext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发起退款"
                        android:textColor="#ffff6464"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="92dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:text="地址："
                        android:textColor="#999999"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/refundAdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text=""
                        android:textColor="#ff333333"
                        android:textSize="13dp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="92dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:text="发起退款："
                        android:textColor="#999999"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/refundStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#ff333333"
                        android:textSize="13dp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginLeft="92dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:text="退款完成："
                        android:textColor="#999999"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/refundEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#ff333333"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/yue_btn_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="实付金额："
                    android:textColor="#999999"
                    android:textSize="13dp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="￥880.00"
                    android:textColor="#ff333333"
                    android:textSize="13dp"
                    android:id="@+id/refundPayMoney"/>

                <TextView
                    android:id="@+id/refundZeroMore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/more_down"
                    android:gravity="center_vertical|right"
                    android:drawablePadding="4dp"
                    android:text="详情"
                    android:textColor="#ff333333"
                    android:textSize="13dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:id="@+id/refundCoupon"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFE1E1E1"
                    android:layout_marginLeft="80dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="优惠券抵扣："
                        android:textColor="#999999"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="¥:880.00"
                        android:textColor="#ff333333"
                        android:textSize="13dp"
                        android:id="@+id/refundCouponMoney"/>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFE1E1E1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="退款金额："
                    android:textColor="#999999"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="￥880.00"
                    android:textColor="#FF6464"
                    android:textSize="13dp"
                    android:id="@+id/refundMoney"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/yue_btn_bg"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下单信息"
                    android:textColor="#ff333333"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/refundTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间：2018-8-30 16:20"
                    android:textColor="#666666"
                    android:textSize="13dp" />
            </LinearLayout>

            <include layout="@layout/layout_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/brokerImage"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="#cccccc"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@+id/brokerImage"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/brokerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="青苔"
                            android:textColor="#333333"
                            android:textSize="16dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/refundAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/woman_shape"
                                android:drawableLeft="@mipmap/content_icon_lady"
                                android:drawablePadding="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="21"
                                android:textColor="#FFFFFF"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/refundJoin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/join_shape"
                                android:drawablePadding="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="律师"
                                android:textColor="#FFFFFF"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <!--<include layout="@layout/layout_view" />-->

                <!--<TextView-->
                <!--android:id="@+id/refundOne"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_gravity="right"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:background="@drawable/filtreate_off_shape"-->
                <!--android:gravity="center"-->
                <!--android:padding="12dp"-->
                <!--android:text="发信息"-->
                <!--android:textColor="#999999"-->
                <!--android:textSize="13dp" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_error_network"/>
</LinearLayout>
