<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/orderServeImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_loading"
            app:riv_oval="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orderServeImage"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/orderServeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"

                android:ellipsize="end"
                android:maxEms="6"
                android:singleLine="true"
                android:text="仙儿仙儿仙儿仙儿仙儿"
                android:textColor="#ff333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderServeAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderServeName"
                android:layout_marginTop="2dp"
                android:background="@drawable/woman_shape"
                android:drawableLeft="@mipmap/content_icon_lady"
                android:drawablePadding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="21"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/orderServeJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/orderServeAge"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/orderServeAge"
                android:background="@drawable/join_shape"
                android:drawablePadding="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="律师"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/orderServeMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:text="￥880.00"
                android:textColor="#ffff6464"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/setatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderServeMoney"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#999999"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:id="@+id/orderServeLayout"
        android:visibility="visible">

        <TextView
            android:id="@+id/orderServeComplaints"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="投诉"
            android:textColor="#ff999999"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/orderServeLate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pink_late_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="迟到退款"
            android:textColor="#FF6464"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/orderServeOver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="26dp"
                android:layout_height="19dp"
                android:text="取消"
                android:textColor="#ff999999"
                android:textSize="13sp"
                android:id="@+id/orderCancel"/>

            <TextView
                android:id="@+id/orderServeTime"
                android:layout_width="38dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="04:49"
                android:textColor="#ff71c5ff"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderServeLookAdds"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="查看位置"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/orderServeMassage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="发消息"
            android:textColor="#ff999999"
            android:textSize="13sp" />

        <!--<TextView-->
            <!--android:id="@+id/orderServePay"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@drawable/black_shape"-->
            <!--android:gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:text="付款"-->
            <!--android:textColor="#ff333333"-->
            <!--android:textSize="13sp" />-->
        <LinearLayout
            android:id="@+id/orderServePay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/black_shape"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="付款"
                android:textColor="#ff333333"
                android:textSize="13sp"
                android:id="@+id/orderPay"/>

            <TextView
                android:id="@+id/orderPayTime"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="04:49"
                android:textColor="#ff71c5ff"
                android:textSize="13sp"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:background="#E1E1E1" />
</LinearLayout>