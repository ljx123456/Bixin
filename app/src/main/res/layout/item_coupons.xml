<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@mipmap/ic_coupons"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#ffff6464"
            android:textSize="12dp"
            android:text="¥"
            android:id="@+id/couponsTips"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/couponsTips"
            android:layout_marginTop="12dp"
            android:textColor="#ffff6464"
            android:textSize="24dp"
            android:id="@+id/couponsMoney"
            android:text="0.00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="达人抵扣金"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:id="@+id/couponsTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:textColor="#a6000000"
            android:text="有效期：2019/06/01 - 2019/07/01"
            android:textSize="12dp"
            android:id="@+id/couponsTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/couponsTitle"
            android:layout_above="@+id/couponsTime"
            android:layout_marginTop="2dp"
            android:text="大于300元可用"
            android:textColor="#a6000000"
            android:textSize="12dp"
            android:id="@+id/couponsCondition"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_coupons"
            android:checked="false"
            android:text=" 勾选使用"
            android:textColor="#73000000"
            android:textSize="12dp"
            android:id="@+id/couponsNext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不可用"
            android:textColor="#40000000"
            android:textSize="12dp"
            android:id="@+id/couponsState"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>