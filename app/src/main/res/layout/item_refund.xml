<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/refundOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号：201908309872"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/refundType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待退款"
            android:textColor="#ffff6464"
            android:textSize="14dp" />
    </LinearLayout>

    <include layout="@layout/layout_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/brokerImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            android:src="#cccccc"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/brokerImage"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brokerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青苔"
                android:textColor="#333333"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/refundAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/woman_shape"
                    android:drawableLeft="@mipmap/content_icon_lady"
                    android:drawablePadding="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="21"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/refundJoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/join_shape"
                    android:drawablePadding="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="律师"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/refundZongMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:text="实付金额：￥880.00"
            android:textColor="#ff666666"
            android:textSize="13dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待退款金额："
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/refundMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥880.00"
            android:textColor="#FF6464"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/layout_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginRight="12dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/refundOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="12dp"
            android:text="联系我们"
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/refundTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filtreate_off_two_shape"
            android:gravity="center"
            android:padding="12dp"
            android:text="查看详情"
            android:textColor="#333333"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>