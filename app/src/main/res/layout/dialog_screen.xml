<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="筛选"
            android:textColor="#272121"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialogOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/screen_button_close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="16dp" />

            <com.example.shadow.heartrecreation.view.tag.MultiLineChooseLayout
                android:id="@+id/screenSex"
                style="@style/SingleChooseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="身高"
                android:textColor="#333333"
                android:textSize="16dp"
                android:visibility="gone" />

            <com.example.shadow.heartrecreation.view.tag.MultiLineChooseLayout
                android:id="@+id/screenHight"
                style="@style/SingleChooseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="年龄"
                android:textColor="#333333"
                android:textSize="16dp" />

            <com.example.shadow.heartrecreation.view.tag.MultiLineChooseLayout
                android:id="@+id/screenAge"
                style="@style/SingleChooseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="职业"
                android:textColor="#333333"
                android:textSize="16dp" />

            <com.example.shadow.heartrecreation.view.tag.MultiLineChooseLayout
                android:id="@+id/screenJoin"
                style="@style/SingleChooseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="24dp"
                android:gravity="center"
                android:text="状态"
                android:textColor="#333333"
                android:textSize="16dp" />

            <com.example.shadow.heartrecreation.view.tag.MultiLineChooseLayout
                android:id="@+id/screenType"
                style="@style/SingleChooseDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/screenOver"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/gray_shape"
            android:gravity="center"
            android:text="重置"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/screenOk"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/pink_all_shape"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>