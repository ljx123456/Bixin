<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/item_bg"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥18800.00"
            android:textColor="#ffff6464"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderZhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="（包房已满）"
            android:textColor="#ff999999"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_right"
            android:drawablePadding="5dp"
            android:text="详情"
            android:textColor="#333333"
            android:textSize="13dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="约玩场地"
            android:textColor="#999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/orderAdds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="蜂巢KTV（武侯店）"
            android:textColor="#333333"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="90dp"
        android:background="#E1E1E1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="包房类型"
            android:textColor="#999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/orderBaofangType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="豪华包房"
            android:textColor="#333333"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/orderNumLayout">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="90dp"
            android:background="#E1E1E1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="包房号码"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="K888"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/orderReserveLayout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="90dp"
            android:background="#E1E1E1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="预约时间"
                android:textColor="#999999"
                android:textSize="16dp"
                android:id="@+id/orderReserveText"/>

            <TextView
                android:id="@+id/orderReserve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="10月24日（周四）22:00"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/orderStartLayout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="90dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始时间"
                android:textColor="#999999"
                android:textSize="16dp"
                android:id="@+id/orderStartText"/>

            <TextView
                android:id="@+id/orderStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="10月24日（周四）22:00"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/overTimeLayout">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="90dp"
            android:background="#E1E1E1" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="结束时间"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="10月24日（周四）22:00"
                android:textColor="#333333"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E1E1E1" />


    <LinearLayout
        android:id="@+id/orderLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff71bdfe"
            android:textSize="13dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/orderDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除订单"
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/orderCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消订单"
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/orderRelation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="联系我们"
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/orderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_off_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="    分享    "
            android:textColor="#999999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/orderPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_on_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="去支付"
            android:textColor="#FF6464"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/orderCome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/filtreate_on_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="重新下单"
            android:textColor="#FF6464"
            android:textSize="13dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/orderAddsLayout"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:text="添加服务"
            android:textColor="#fffea984"
            android:textSize="13dp"
            android:drawableRight="@mipmap/icon_add_orange"/>
    </RelativeLayout>

</LinearLayout>