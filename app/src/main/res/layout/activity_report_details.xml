<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/item_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="举报信息"
                        android:textColor="#ff333333"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="被举报人"
                        android:textColor="#ff999999"
                        android:textSize="13dp"
                        android:gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="44dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="达人昵称"
                            android:textColor="#ff333333"
                            android:textSize="13dp"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_nickName"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EBEBEB"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="举报详情"
                        android:textColor="#ff999999"
                        android:textSize="13dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="44dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="不会喝酒，服务态度不好，唱歌不好听。不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好,服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听 "
                        android:textColor="#ff333333"
                        android:textSize="13dp"
                        android:id="@+id/tv_details"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/item_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="处理结果"
                        android:textColor="#ff333333"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2019-08-30 18:24"
                        android:textColor="#ff999999"
                        android:textSize="13dp"
                        android:id="@+id/tv_time"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:text="不会喝酒，服务态度不好，唱歌不好听。不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听不会喝酒，服务态度不好，唱歌不好听 "
                    android:textColor="#ff333333"
                    android:textSize="13dp"
                    android:id="@+id/tv_result"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/layout_error_network"/>
    </RelativeLayout>

</LinearLayout>